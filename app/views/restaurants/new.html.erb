<%= link_to 'return to restaurant list', restaurants_path %>
<h1>Add Restaurant</h1>

<%= form_for @restaurant, url: {action: :create} do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :street %>
    <%= f.text_field :street %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </p>

  <p>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </p>

  <p>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </p>

  <p>
    <%= f.label :neighborhood %><br>
    <%= collection_select(:restaurant, :neighborhood_id, Neighborhood.all, :id, :name, include_blank: true) %>
  </p>

  <p>
    <%= collection_check_boxes(:restaurant, :category_ids, Category.all, :id, :name) %>
  </p>

  <p><%= f.submit %></p>
<% end %>  